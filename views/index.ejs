<!doctype html>
<html class="no-js" lang="">

<head>
    <meta charset="utf-8">
    <title></title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta property="og:title" content="">
    <meta property="og:type" content="">
    <meta property="og:url" content="">
    <meta property="og:image" content="">

    <link rel="stylesheet" href="/css/main.css">
    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();

        socket.on( 'update-runners', function( data ) {
            document.getElementById('runners').innerHTML = "";
            for (let i of data){
                document.getElementById('runners').innerHTML += `<li><p>${i.name}</p></li>`;
            }
        });

        socket.on( 'update-speed', function( data ) {
            document.getElementById('speders').innerHTML = "";
            for (let i of data) {
                document.getElementById('speders').innerHTML += `<li><p>${i.name}: ${i.duration}</p></li>`;
            }
        });
    </script>
    <meta name="theme-color" content="#fafafa">
</head>

<body>

<%- include('./partials/logo') %>

<div id="next">
    <h1>Volgende lopers</h1>
    <ol id="runners">
    </ol>
</div>

<div id="most">
    <h1>Meeste rondes</h1>
</div>

<div id="fast">
    <h1>Snelste
        lopers</h1>
    <ol id="speders">
    </ol>
</div>
<%- include('./partials/footer') %>
</body>

</html>
